<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tcctelaTogepi.Views.RelatarProblema"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#fff">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="72"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <ImageButton x:Name="btnVoltarTela" Clicked="btnVoltarTela_Clicked" Source="ic_arrow_back_ios"
        BackgroundColor="#fff" VerticalOptions="Center" HorizontalOptions="Start" Margin="10" CornerRadius="14" />
        </Grid>

        <Grid Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="0, 10, 0, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>

</ContentPage>